<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raylison Ortela"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/txt_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:text="This is an email from me to you"
            android:textSize="20sp"
            android:layout_toLeftOf="@+id/img_delete"
            android:ellipsize="end"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/img_archive"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/img_archive"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_archive_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>